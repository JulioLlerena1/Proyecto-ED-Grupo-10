<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="verEstadisticas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="25dp">


            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listado de Aeropuertos:"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="21dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:layout_weight="1">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout

                        android:id="@+id/tableLayoutAeropuertos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                    </TableLayout>
                </LinearLayout>
            </ScrollView>


            <Button
                android:id="@+id/btn_agregarAeropuerto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/disenioboton"
                android:onClick="verEstadisticas"
                android:text="Agregar Aeropuerto"
                android:textColor="#886AC8"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <Button
                android:id="@+id/regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/disenioboton"
                android:onClick="regresar"
                android:text="Regresar"
                android:textColor="#886AC8"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>