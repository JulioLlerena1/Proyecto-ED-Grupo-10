<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="verEstadisticas">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="25dp">

            <Space
                android:layout_width="match_parent"
                android:layout_height="21dp" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="44dp"
                android:text="Información del aeropuerto:"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="TextView" />
            </LinearLayout>

            <Space
                android:layout_width="match_parent"
                android:layout_height="24dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Listado de vuelos:"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="21dp" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="298dp"
                android:layout_weight="1">

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TableLayout

                        android:id="@+id/tableLayoutVuelos"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:stretchColumns="*">

                    </TableLayout>
                </LinearLayout>
            </ScrollView>

            <Space
                android:layout_width="match_parent"
                android:layout_height="39dp" />

            <Button
                android:id="@+id/ordenar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/disenioboton"
                android:onClick="ordenarPorHorario"
                android:text="Ordenar por horario de salida"
                android:textColor="#886AC8"
                android:textColorLink="#673AB7"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="26dp" />

            <Button
                android:id="@+id/btn_estaditicas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/disenioboton"
                android:onClick="verEstadisticas"
                android:text="Ver estadísticas"
                android:textColor="#886AC8"
                android:textStyle="bold" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="22dp" />

            <Button
                android:id="@+id/regresar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/disenioboton"
                android:onClick="regresar"
                android:text="Regresar"
                android:textColor="#886AC8"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>